{
    "name": "rawilk/laravel-settings",
    "description": "Store Laravel application settings in the database.",
    "keywords": [
        "rawilk",
        "laravel-settings",
        "settings"
    ],
    "homepage": "https://github.com/rawilk/laravel-settings",
    "license": "MIT",
    "authors": [
        {
            "name": "Randall Wilk",
            "email": "randall@randallwilk.dev",
            "homepage": "https://randallwilk.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Rawilk\\Settings\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rawilk\\Settings\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "SettingsServiceProvider"
            ],
            "aliases": {
                "Settings": "SettingsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
